{
  "name": "express-url-scraper",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node build/server.js",
    "dev": "nodemon src/server.ts",
    "test": "jest",
    "build": "npx tsc --project ./",
    "lint": "eslint --ignore-path .gitignore .",
    "docker:build": "docker build -t express-url-scraper .",
    "docker:run": "docker run -p 3000:3000 express-url-scraper",
    "docker:run:dev": "docker run -p 3000:3000 -p 9229:9229 -v ${PWD}:/usr/src/app -v /usr/src/app/node_modules -e CHOKIDAR_USEPOLLING=true express-url-scraper"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.42",
    "@swc/jest": "^0.2.24",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.7",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "node --inspect=0.0.0.0:9229 --nolazy -r ts-node/register"
    },
    "ext": "ts"
  }
}
